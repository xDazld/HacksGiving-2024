<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Aha.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:Views="clr-namespace:Aha.Views"
    Shell.FlyoutBehavior="Flyout"
    Title="Aha">

    <!-- Define the TitleView for the top bar -->
        <Shell.TitleView>
            <Grid Padding="10" BackgroundColor="#C1E0F4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
        </Grid>
        </Shell.TitleView>

        <!-- Existing ShellContent -->
        <ShellContent 
        Title="Chat"
        ContentTemplate="{DataTemplate Views:Chat}"
        Route="Chat" />
        <ShellContent 
        Title="Settings"
        ContentTemplate="{DataTemplate Views:Settings}"
        Route="Settings" />
</Shell>
